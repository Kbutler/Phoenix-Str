<!DOCTYPE html>
<html>

  <head>
    <title>PhoenixStr | <%= @title %></title>
    <%= favicon_link_tag @favicon_img %>
    <%= stylesheet_link_tag    "application", :media => "screen" %>
    <%= stylesheet_link_tag    "print",       :media => "print"  %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
    
  <body>

    <div id="headerPrint">
      <%= image_tag(@logo_img,  :alt => "Missing logo", :class => "logo_print_img") %>
      <p> <%= @fullName   %> <br/>
          <%= @jobTitleP1 %> <br/> &
          <%= @jobTitleP2 %> <br/>
          <%= @address    %> <br/>
          <%= @phoneNum   %> <br/>
          <%= @faxNum     %>
      </p> 
      <p><br/><br/><br/>Thankyou for visiting www.WebAddress.de/ </p>
    </div>
    
    <div id="header">
      <%= image_tag(@logo_img,   :alt => "Missing logo",   :class => "logo_img") %>
      <%= image_tag(@header_img, :alt => "Missing Header", :class => "header_img") %>
      <p><%= @fullName %></br> <%=@jobTitleP1 %> <br/> & <%= @jobTitleP2 %></p>
    </div> <!-- header -->
    
    <div id="centeredmenu">
      <ul>
        <li><%= link_to "Page 1", page_page1_path %></li>
        <li><%= link_to "Page 2", page_page2_path %></li>
        <li><%= link_to "Page 3", page_page3_path %></li>
        <li><%= link_to "Page 4", page_page4_path %></li>
        <li><%= link_to "Page 4", page_page4_path %></li>
        <li><%= link_to "Page 4", page_page4_path %></li>
        <li><%= link_to "Page 4", page_page4_path %></li>
        <li><%= link_to "Page 4", page_page4_path %></li>
        <li><%= link_to "Page 4", page_page4_path %></li>
        <li><a href="/page/page1" class="active">Page 5</a></li>
      </ul>
    </div> <!-- centeredmenu -->


    <div class="colmask leftmenu">
      <div class="colright">
        <div class="col1wrap">
          <div class="col1">
            <!-- Column 2 start -->
            <%= yield %>

          <!-- Column 2 end -->
          </div>
  
        </div> <!-- class="col1wrap" -->

        <div class="col2">
          <!-- Column 1 start -->
          <%= image_tag(@wallpaper_img , :alt => "Missing Wallpaper", :class => "wallpaper_img") %>
          <!-- Column 1 end -->

        </div> <!--  class="col2" -->
      </div> <!-- class="colright" -->
    </div> <!-- class="colmask leftmenu" -->


    <div id="footer">
      <p> <%= @fullName   %>
          <%= @jobTitleP1 %>&
          <%= @jobTitleP2 %>
          <%= @address    %>
          <%= @phoneNum   %>
          <%= @faxNum     %>
      </p> 
    </div>

</body>
</html>
